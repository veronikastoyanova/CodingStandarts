{
  "lintOptions": {
    "typeCheck": true
  },
  "defaultSeverity": "error",
  "rules": {
    "array-type": [true, "array"],
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-typecast",
      "check-decl",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "semicolon": [
      true,
      "always"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "prefer-const": true,
    "prefer-method-signature": true,
    "number-literal-format": true,
    "no-unused-variable": true,
    "arrow-parens": true,
    "align": {
      "options": [
        "arguments",
        "parameters",
        "statements",
        "members",
        "elements"
      ]
    },
    "arrow-return-shorthand": true,
    "binary-expression-operand-order": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "class-name": true,
    "deprecation": true,
    "jsdoc-format": true,
    "max-classes-per-file": [true, 1],
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "constructor",
          "static-method",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "prefer-object-spread": true,
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "new-parens": true,
    "no-construct": true,
    "no-floating-promises": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-misused-new": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-string-throw": true,
    "completed-docs": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-empty-interface": true,
    "no-magic-numbers": {
      "options": [-1, 0, 1, 2, 3, 10],
      "severity": "warning"
    },
    "no-reference": true,
    "no-use-before-declare": true,
    "prefer-template": [true, "allow-single-concat"],
    "triple-equals": [true, "allow-null-check"],
    "one-variable-per-declaration": true,
    "ban": [
      true,
      [
        "describe",
        "only"
      ],
      [
        "it",
        "only"
      ]
    ],
    "interface-name": [
      true,
      "always-prefix"
    ],
    "interface-over-type-literal": true,
    "max-line-length": {
      "options": [120],
      "severity": "warning"
    },
    "no-console": {
      "options": [
        "log",
        "info",
        "debug",
        "trace",
        "traceEnd"
      ]
    },
    "no-conditional-assignment": true,
    "no-switch-case-fall-through": true,
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
    "strict-boolean-expressions": {
      "options": ["allow-boolean-or-undefined"],
      "severity": "warning"
    },
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "one-line": [true, "check-catch", "check-finally", "check-else"],
    "use-isnan": true,
    "import-spacing": true,
    "encoding": true,
    "typeof-compare": true,
    "linebreak-style": [true, "LF"]
  }
}